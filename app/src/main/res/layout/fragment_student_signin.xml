<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Student.StudentSignin">


    <TextView
        android:id="@+id/txtm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="Student SignIn"
        android:textColor="#FF4B9A88"
        android:textSize="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/atxt"
        android:text="Verify your phone number"
        android:textSize="30dp"
        android:layout_below="@id/txtm"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#FF4B9A88"
        />

    <TextView
        android:id="@+id/stxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It will send an SMS message to verify \n your phone number."
        android:textSize="15dp"
        android:gravity="center"
        android:layout_below="@id/atxt"
        android:textColor="#ff070707"
        android:layout_marginTop="5dp"
        />

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF4B9A88"
        android:layout_below="@id/stxt"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        />-->



    <LinearLayout
        android:id="@+id/slinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/atxt"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:padding="15dp">

        <Spinner
            android:id="@+id/sspinnerCountries"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/edtborder"/>

        <EditText
            android:id="@+id/sinedtmobilenumber"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:background="@drawable/edtborder"
            android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
            android:hint="Enter Mobile Number"
            android:inputType="phone"
            android:textColor="#ff070707"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:digits="0123456789"
            android:maxLength="10" />

    </LinearLayout>


    <Button
        android:id="@+id/Sinbtngenerateotp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_signin_buttong"
        android:text="Signin"
        android:textColor="#ffffff" />


</LinearLayout>