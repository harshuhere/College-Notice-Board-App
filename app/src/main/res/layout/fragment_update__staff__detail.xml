<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Add_Staff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update staff"
        android:fontFamily="monospace"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#ff070707"
        android:layout_margin="20dp"
        />

    <EditText
        android:id="@+id/staffupdatename"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:hint="Enter Full Name"
        android:inputType="text"
        android:textColor="#ff070707"
        android:textSize="20dp" />

    <AutoCompleteTextView
        android:id="@+id/staffupdatedepartment"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:hint="  Enter Department"
        android:inputType="text"
        android:paddingLeft="7dp"
        android:textColor="#ff070707"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/staffupdateNumber"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:hint="Enter Number"
        android:inputType="number"
        android:maxLength="10"
        android:textColor="#ff070707"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/staffupdateemail"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/border"
        android:hint="Enter Email"
        android:inputType="textEmailAddress"
        android:textColor="#ff070707"
        android:textSize="20dp" />

    <Button
        android:id="@+id/staffbtnupdatestaff"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_signin_buttong"
        android:text="Update Staff"
        android:textColor="#ffffff" />

</LinearLayout>